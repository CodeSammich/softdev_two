def pt(n):
    triples = []
    for a in xrange(1, n):
        for b in xrange(1, n):
            for c in xrange(1, n): #faster to use arange instead of range because arange doesn't store values in memorb
                if a**2 + b**2 == c**2 :
                    triples.append( [a, b, c] )
    return triples

print pt(6)

def pt2(n):
    return [(a, b, c) for a in xrange(n) for b in xrange(b) for c in xrange(c) if a**2 + b**2 == c**2 ]
